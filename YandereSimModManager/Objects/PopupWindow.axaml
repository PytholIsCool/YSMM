<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="YSMM.Objects.PopupWindow"
        Width="300" Height="150"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="{DynamicResource BrushBackground}"
        Foreground="{DynamicResource BrushPrimary}">

	<Border Padding="20" Background="{DynamicResource BrushAltBackground}">
		<Grid RowDefinitions="Auto,*">
			<TextBlock Grid.Row="0" Classes="text" Text="Test" x:Name="MessageText" TextWrapping="Wrap"/>

			<StackPanel Grid.Row="1" Spacing="10" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Center">
				<Button Classes="button" Content="Cancel" x:Name="CancelButton"/>
				<Button Classes="button" Content="Ok" x:Name="OkButton"/>
				<Button Classes="button" Content="Confirm" x:Name="ConfirmButton"/>
			</StackPanel>
		</Grid>
	</Border>
</Window>