<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="YSMM.Objects.PopupWindow"
        Width="300" Height="150"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Background="{DynamicResource BrushBackground}"
        Foreground="{DynamicResource BrushPrimary}">

	<Border Padding="20" Background="{DynamicResource BrushAltBackground}">
		<Grid RowDefinitions="Auto,*">
			<TextBlock Grid.Row="0" Classes="text" Text="Test" x:Name="MessageText" TextWrapping="Wrap"/>
			<Button Grid.Row="1" Classes="button" Content="Ok" x:Name="OkButton" VerticalAlignment="Bottom"/>
		</Grid>
	</Border>
</Window>